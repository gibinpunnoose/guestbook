{% include 'header.html.twig' %}


{% block body %}

	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last">
							<div class="text w-100">
								<h2>Sign Up</h2>
								<p>We are happy you are here !</p>
                                <p>Already a member</p>
								<a href="/" class="btn btn-white btn-outline-white">   Login</a>
							</div>
						</div>
						<div class="login-wrap p-4 p-lg-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Sign Up</h3>
								</div>

							</div>
							{{ form_start(registrationForm) }}
							<div class="form-group mb-3">
								<label class="label" for="name">First Name</label>
								{{ form_widget(registrationForm.first_name,{ 'attr': {'class': 'form-control'} }) }}
							</div>
							<div class="form-group mb-3">
								<label class="label" for="name">Last Name</label>
								{{ form_widget(registrationForm.last_name,{ 'attr': {'class': 'form-control'} }) }}
							</div>
							<div class="form-group mb-3">
								<label class="label" for="name">Email</label>
								{{ form_widget(registrationForm.email_id,{ 'attr': {'class': 'form-control'} }) }}

							</div>
							<div class="form-group mb-3">
								<label class="label" for="password">Password</label>
								{{ form_widget(registrationForm.plainPassword,{ 'attr': {'class': 'form-control'} }) }}
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary submit px-3">{{ button_label|default('Sign Up') }}</button>
							</div>
							<div class="form-group d-md-flex"></div>
							{{ form_end(registrationForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>


	<button type="submit" class="btn">Register</button>
	{{ form_end(registrationForm) }}
{% endblock %}
